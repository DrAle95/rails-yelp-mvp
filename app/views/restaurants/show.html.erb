  <div>
    <h2> <%= @restaurant.name %> </h2>
    <ul>

      <li> <%= @restaurant.category %> </li>
      <li> <%= @restaurant.address %> </li>
    </ul>
    <h4> Check reviews </h4>

    <% @restaurant.reviews.each do |review| %>
    <p> <%= review.content %>, <%= review.rating %> </p>
    <p> <%= link_to "Delete review", review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Delete?"} %></p>
    <% end %>
  <p> </p>
    <%= link_to "+ Write a review", new_restaurant_review_path(@restaurant) %>
<p></p>
    <%= button_to "Delete Resto", @restaurant, method: :delete %>
    <p></p>
    <%= link_to "All Resto", restaurants_path %>
  </div>
